{
  "name": "@litodocs/graph",
  "version": "0.1.0",
  "description": "Compile Markdown docs into a knowledge & workflow graph for AI agents. MCP server included.",
  "type": "module",
  "bin": {
    "lito-graph": "./bin/run.js"
  },
  "files": [
    "bin/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run bin/cli.ts build",
    "serve": "bun run bin/cli.ts serve",
    "inspect": "bun run bin/cli.ts inspect",
    "compile": "tsup",
    "prepublishOnly": "tsup",
    "test": "bun test"
  },
  "keywords": [
    "documentation",
    "knowledge-graph",
    "mcp",
    "ai-agents",
    "lito",
    "markdown"
  ],
  "author": "Lito-docs",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "commander": "^12.1.0",
    "gray-matter": "^4.0.3",
    "picocolors": "^1.1.1",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0"
  }
}
